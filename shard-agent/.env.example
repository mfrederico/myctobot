# Shard Agent Configuration

# Server settings
SHARD_PORT=3500
SHARD_HOST=0.0.0.0

# Authentication - CHANGE THIS!
SHARD_API_KEY=your-secret-api-key-here

# Shard identification
SHARD_ID=shard-general-01
SHARD_TYPE=general

# Job settings
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_MS=600000

# Paths
WORKSPACE_PATH=/var/lib/claude-jobs
CLAUDE_CODE_PATH=claude

# Cleanup
CLEANUP_AFTER_JOB=true

# Available MCP capabilities on this shard
CAPABILITIES=git,filesystem
